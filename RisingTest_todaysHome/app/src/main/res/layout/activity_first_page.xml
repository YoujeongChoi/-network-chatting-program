<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstPageActivity">

    <LinearLayout
        android:id="@+id/first_page_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="150dp">

        <TextView
            android:id="@+id/first_page_tv_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지금 가입하면 최대 10만원"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </LinearLayout>


    <TextView
        android:id="@+id/first_page_tv_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="쿠폰 증정!"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/first_page_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/three_sec_in_icon"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/three_sec_in_icon"
        app:layout_constraintTop_toBottomOf="@+id/first_page_tv_03"
        android:layout_marginTop="60dp"/>

    <ImageButton
        android:id="@+id/keep_in_kakaoTalk"
        android:layout_width="310dp"
        android:layout_height="52dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/three_sec_in_icon"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/keep_in_kakao_icon" />

    <LinearLayout
        android:id="@+id/first_page_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/keep_in_kakaoTalk"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/naver_signup_round"
            android:layout_width="47dp"
            android:layout_height="47dp"
            app:srcCompat="@drawable/signup_naver_round_icon"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"/>

        <ImageButton
            android:id="@+id/fb_signup_round"
            android:layout_width="47dp"
            android:layout_height="47dp"
            app:srcCompat="@drawable/signup_fb_round_icon"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"/>

        <ImageButton
            android:id="@+id/apple_signup_round"
            android:layout_width="47dp"
            android:layout_height="47dp"
            app:srcCompat="@drawable/signup_apple_round_icon"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/by_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/first_page_icons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/signin_by_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signin_by_email"
            android:textSize="13dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/signup_by_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_by_email"
            android:textColor="@color/black"
            android:textSize="13dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/login_matters_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인에 문제가 있으신가요?"
        android:textSize="12dp"
        android:textColor="#C8CCCF"
        app:layout_constraintTop_toBottomOf="@+id/by_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/order_lists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:textSize="13dp"
        android:text="비회원 주문 조회하기"/>




</androidx.constraintlayout.widget.ConstraintLayout>