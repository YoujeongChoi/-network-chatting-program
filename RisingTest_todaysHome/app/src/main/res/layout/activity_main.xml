<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:id="@+id/home_top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:weightSum="10"
            android:background="@color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/search_box"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="13dp"
                android:layout_weight="8">

                <ImageView
                    android:id="@+id/home_top_search_iv"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/search"
                    android:background="@android:color/transparent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="#787878"/>

                <EditText
                    android:id="@+id/home_search_et"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="오늘의집 통합검색"
                    android:ems="10"
                    android:background="@android:color/transparent"
                    android:textColorHint="#ACACAC"
                    android:textSize="14dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/home_top_search_iv"
                    android:singleLine="true" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/bookmark_icon"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:layout_marginStart="15dp"
                android:layout_marginTop="17dp"/>

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/cart_icon"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="17dp"/>


        </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/main_tabs"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        app:tabMode="scrollable"
        app:layout_constraintTop_toBottomOf="@id/home_top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tabGravity="start"
        app:tabIndicatorColor="#48C2EA"
        app:tabSelectedTextColor="#48C2EA"
        app:tabTextAppearance="@style/tab_text"
        app:tabTextColor="#000000"
        app:tabIndicatorHeight="2dp"
        app:tabRippleColor="@android:color/transparent"
        app:tabMinWidth="40dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인기" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팔로잉" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="집들이" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="노하우" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전문가집들이" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="질문과답변" />


    </com.google.android.material.tabs.TabLayout>

        <FrameLayout
            android:id="@+id/tabContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/main_tabs"
            app:layout_constraintStart_toStartOf="@id/main_tabs"
            android:paddingTop="0.8dp">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/main_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


        </FrameLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomAppBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="10"
                android:background="#F7F9FB"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                app:fabCradleMargin="5dp"
                app:fabCradleRoundedCornerRadius="10dp"
                app:itemIconSize="23dp"
                app:itemIconTint="@drawable/menu_selector_color"
                app:itemTextAppearanceActive="@style/BottomNavigationView.Active"
                app:itemTextAppearanceInactive="@style/BottomNavigationView"
                app:itemTextColor="@drawable/menu_selector_color"
                app:labelVisibilityMode="labeled"
                app:menu="@menu/bottom_navigation_items"
                android:elevation="0dp"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_weight="0"
                android:src="@drawable/plus"
                app:itemIconSize="18dp"
                app:itemIconTint="@drawable/menu_selector_color"
                app:layout_anchor="@id/bottomAppBar"/>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



