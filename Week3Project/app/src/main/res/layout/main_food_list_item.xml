<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:layout_marginTop="20dp"
        android:id="@+id/main_food_img"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:columnCount="3"
        android:orientation="vertical"
        android:rowCount="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_gravity="fill"
            android:layout_rowSpan="2"
            android:layout_columnSpan="2"
            app:srcCompat="@drawable/food_myungzakpasta_01"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_gravity="fill"
            app:srcCompat="@drawable/food_myungzakpasta_02"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_gravity="fill"
            app:srcCompat="@drawable/food_myungzakpasta_03"
            android:scaleType="centerCrop"/>
    </GridLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:id="@+id/main_food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="명작파스타 성북점"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/main_food_img"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/main_food_star"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/star"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@+id/main_food_name"
        app:layout_constraintStart_toEndOf="@+id/main_food_name"/>

    <TextView
        android:id="@+id/main_food_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/main_food_star"
        app:layout_constraintStart_toEndOf="@+id/main_food_star"
        android:text="4.8"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="1dp"
        android:layout_marginStart="3dp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/main_food_minorder_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최소주문"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/main_food_name"
        app:layout_constraintStart_toStartOf="@id/main_food_name"/>

    <TextView
        android:layout_marginStart="5dp"
        android:id="@+id/main_food_minorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9,000원"
        android:textSize="15dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/main_food_minorder_tv"
        app:layout_constraintTop_toTopOf="@id/main_food_minorder_tv"/>

        <TextView
            android:layout_marginStart="10dp"
        android:id="@+id/main_food_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배달팁"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="@id/main_food_minorder_tv"
        app:layout_constraintStart_toEndOf="@id/main_food_minorder"/>

    <TextView
        android:layout_marginStart="5dp"
        android:id="@+id/main_food_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3,500원~4,000d원"
        android:textSize="15dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/main_food_tip_tv"
        app:layout_constraintTop_toTopOf="@id/main_food_minorder_tv"/>







</androidx.constraintlayout.widget.ConstraintLayout>