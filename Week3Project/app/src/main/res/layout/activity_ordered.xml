<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:tabMode="scrollable"
    android:background="#F3F5F7"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ordered_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingStart="10dp"
        android:paddingTop="15dp"
        android:paddingEnd="10dp"
        android:paddingBottom="15dp">

        <ImageButton
            android:id="@+id/ordered_up_ib"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ordered_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주문내역"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ordered_up_ib"
            app:layout_constraintEnd_toStartOf="@+id/ordered_refresh_ib"
            app:layout_constraintStart_toEndOf="@+id/ordered_up_ib"
            app:layout_constraintTop_toTopOf="@+id/ordered_up_ib" />

        <ImageButton
            android:id="@+id/ordered_refresh_ib"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/refresh"
            app:layout_constraintBottom_toBottomOf="@+id/ordered_title_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ordered_title_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/ordered_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ordered_top"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="#FFFFFF"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:scrollbars="horizontal"
        app:tabGravity="start"
        app:tabIndicatorColor="@color/black"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="4dp"
        app:tabMode="scrollable"
        app:tabRippleColor="@android:color/transparent"
        app:tabTextAppearance="@style/tab_text">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배달/포장" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B마트" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배민스토어" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쇼핑라이브" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전국별미" />


    </com.google.android.material.tabs.TabLayout>

    <ImageButton
        android:src="@drawable/thisssssssss1"
        android:id="@+id/ordered_ad_ib"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/ordered_tabs"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp">

    </ImageButton>

    <ImageButton
        android:src="@drawable/thissssssssss2"
        android:id="@+id/ordered_alert_ib"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/ordered_ad_ib"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp">

    </ImageButton>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ordered_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ordered_alert_ib" />







</RelativeLayout>
